{
  "name": "common",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/shared/common/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/gradle:gradle",
      "options": {
        "taskName": ":libs:shared:common:build",
        "args": ["-x", "test"]
      },
      "configurations": {
        "production": {},
        "development": {}
      },
      "defaultConfiguration": "development",
      "cache": true,
      "inputs": ["default", "{projectRoot}/**/*"],
      "outputs": ["{projectRoot}/build/libs"]
    },
    "test": {
      "executor": "@nx/gradle:gradle",
      "options": {
        "taskName": ":libs:shared:common:test"
      },
      "cache": true,
      "inputs": [
        "default",
        "{projectRoot}/build.gradle",
        "{projectRoot}/src/**/*.java"
      ],
      "outputs": [
        "{projectRoot}/build/reports/tests",
        "{projectRoot}/build/test-results"
      ]
    },
    "clean": {
      "executor": "@nx/gradle:gradle",
      "options": {
        "taskName": ":libs:shared:common:clean"
      }
    },
    "lint": {
      "executor": "@nx/gradle:gradle",
      "options": {
        "taskName": ":libs:shared:common:spotlessCheck"
      },
      "cache": true,
      "inputs": [
        "default",
        "{projectRoot}/build.gradle",
        "{projectRoot}/src/**/*.java"
      ]
    },
    "format": {
      "executor": "@nx/gradle:gradle",
      "options": {
        "taskName": ":libs:shared:common:spotlessApply"
      },
      "cache": true,
      "inputs": [
        "default",
        "{projectRoot}/build.gradle",
        "{projectRoot}/src/**/*.java"
      ],
      "outputs": ["{projectRoot}/build/libs"]
    },
    "sonar": {
      "executor": "@nx/gradle:gradle",
      "options": {
        "taskName": ":libs:shared:common:sonar"
      },
      "cache": true,
      "inputs": [
        "default",
        "{projectRoot}/src/**/*",
        "{projectRoot}/build.gradle"
      ]
    }
  }
}
