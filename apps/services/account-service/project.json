{
  "name": "account-service",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/services/account-service/src",
  "tags": [],
  "implicitDependencies": [
    "service-discovery"
  ],
  "targets": {
    "build": {
      "executor": "@nx/gradle:gradle",
      "options": {
        "taskName": ":apps:services:account-service:build",
        "args": [
          "-x",
          "test"
        ]
      },
      "configurations": {
        "production": {},
        "development": {}
      },
      "defaultConfiguration": "development",
      "cache": true,
      "inputs": [
        "default",
        "{projectRoot}/**/*"
      ],
      "outputs": [
        "{projectRoot}/build/libs"
      ]
    },
    "test": {
      "executor": "@nx/gradle:gradle",
      "options": {
        "taskName": ":apps:services:account-service:test"
      },
      "cache": true,
      "inputs": [
        "default",
        "{projectRoot}/build.gradle",
        "{projectRoot}/src/**/*.java"
      ],
      "outputs": [
        "{projectRoot}/build/reports/tests",
        "{projectRoot}/build/test-results"
      ]
    },
    "serve": {
      "executor": "@nx/gradle:gradle",
      "continuous": true,
      "options": {
        "taskName": ":apps:services:account-service:bootRun"
      },
      "configurations": {
        "production": {
          "args": [
            "--args=--spring.profiles.active=prod"
          ]
        },
        "development": {}
      },
      "defaultConfiguration": "development",
      "dependsOn": [
        "build"
      ]
    },
    "clean": {
      "executor": "@nx/gradle:gradle",
      "options": {
        "taskName": ":apps:services:account-service:clean"
      }
    },
    "lint": {
      "executor": "@nx/gradle:gradle",
      "options": {
        "taskName": ":apps:services:account-service:spotlessCheck"
      },
      "cache": true,
      "inputs": [
        "default",
        "{projectRoot}/build.gradle",
        "{projectRoot}/src/**/*.java"
      ]
    },
    "format": {
      "executor": "@nx/gradle:gradle",
      "options": {
        "taskName": ":apps:services:account-service:spotlessApply"
      },
      "cache": true,
      "inputs": [
        "default",
        "{projectRoot}/build.gradle",
        "{projectRoot}/src/**/*.java"
      ],
      "outputs": [
        "{projectRoot}/build/libs"
      ]
    },
    "sonar": {
      "executor": "@nx/gradle:gradle",
      "options": {
        "taskName": ":apps:services:account-service:sonar"
      },
      "cache": true,
      "inputs": [
        "default",
        "{projectRoot}/src/**/*",
        "{projectRoot}/build.gradle"
      ]
    },
    "docker-build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -t $DOCKER_USER/ebanking-account-service:${TAG:-latest} -f apps/services/account-service/Dockerfile .",
        "cwd": "."
      },
      "dependsOn": [
        "build"
      ],
      "cache": false
    },
    "docker-push": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker push $DOCKER_USER/ebanking-account-service:${TAG:-latest}",
        "cwd": "."
      },
      "dependsOn": [
        "docker-build"
      ],
      "cache": false
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "helm upgrade --install account-service tools/helm/microservice -n $DEPLOY_NAMESPACE -f tools/helm/microservice/values-account-service.yaml --set image.tag=${TAG:-latest} --set image.repository=$DOCKER_USER/ebanking-account-service --set image.pullPolicy=Always --wait"
        ],
        "cwd": "."
      },
      "configurations": {
        "production": {
          "env": {
            "DEPLOY_NAMESPACE": "ebanking"
          }
        },
        "staging": {
          "env": {
            "DEPLOY_NAMESPACE": "staging"
          }
        }
      },
      "cache": false
    }
  }
}
