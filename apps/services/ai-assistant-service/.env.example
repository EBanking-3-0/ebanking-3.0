# AI Assistant Service Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# AI Configuration
# ============================================
# OpenAI API Key (required for AI functionality)
# Get your API key from: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# AI Provider (openai, anthropic, or local)
AI_PROVIDER=openai

# AI Model to use
# For OpenAI: gpt-4-turbo-preview, gpt-4, gpt-3.5-turbo, etc.
# For Anthropic: claude-3-opus-20240229, claude-3-sonnet-20240229, etc.
AI_MODEL=gpt-4-turbo-preview

# AI Temperature (0.0 to 2.0, default: 0.7)
# Lower values make responses more focused, higher values more creative
AI_TEMPERATURE=0.7

# Maximum tokens in AI response (default: 1000)
AI_MAX_TOKENS=1000

# Enable/disable action execution (default: true)
AI_ENABLE_ACTIONS=true

# ============================================
# MongoDB Configuration
# ============================================
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=ebanking
MONGODB_USERNAME=
MONGODB_PASSWORD=

# ============================================
# Kafka Configuration
# ============================================
SPRING_KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# ============================================
# Service Discovery (Eureka)
# ============================================
# Eureka server URL
EUREKA_CLIENT_SERVICE_URL_DEFAULTZONE=http://localhost:8761/eureka/

# ============================================
# Conversation Settings
# ============================================
# Conversation TTL in days (default: 90)
CONVERSATION_TTL_DAYS=90

# Maximum messages per conversation (default: 100)
CONVERSATION_MAX_MESSAGES=100

# ============================================
# Server Configuration
# ============================================
# Server port (default: 8090)
SERVER_PORT=8090

# ============================================
# Logging
# ============================================
# Log level: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

# ============================================
# Development/Testing
# ============================================
# Spring profiles: dev, test, prod
SPRING_PROFILES_ACTIVE=dev
