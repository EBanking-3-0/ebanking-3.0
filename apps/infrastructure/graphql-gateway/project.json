{
  "name": "graphql-gateway",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/infrastructure/graphql-gateway/src",
  "tags": [],
  "implicitDependencies": ["service-discovery"],
  "targets": {
    "build": {
      "executor": "@nx/gradle:gradle",
      "options": {
        "taskName": ":apps:infrastructure:graphql-gateway:build",
        "args": ["-x", "test"]
      },
      "configurations": {
        "production": {},
        "development": {}
      },
      "defaultConfiguration": "development",
      "cache": true,
      "inputs": ["default", "{projectRoot}/**/*"],
      "outputs": ["{projectRoot}/build/libs"]
    },
    "test": {
      "executor": "@nx/gradle:gradle",
      "options": {
        "taskName": ":apps:infrastructure:graphql-gateway:test"
      },
      "cache": true,
      "inputs": [
        "default",
        "{projectRoot}/build.gradle",
        "{projectRoot}/src/**/*.java"
      ],
      "outputs": [
        "{projectRoot}/build/reports/tests",
        "{projectRoot}/build/test-results"
      ]
    },
    "serve": {
      "executor": "@nx/gradle:gradle",
      "continuous": true,
      "options": {
        "taskName": ":apps:infrastructure:graphql-gateway:bootRun"
      },
      "configurations": {
        "production": {
          "args": ["--args=--spring.profiles.active=prod"]
        },
        "development": {}
      },
      "defaultConfiguration": "development",
      "dependsOn": [
        "build"
      ]
    },
    "clean": {
      "executor": "@nx/gradle:gradle",
      "options": {
        "taskName": ":apps:infrastructure:graphql-gateway:clean"
      }
    },
    "lint": {
      "executor": "@nx/gradle:gradle",
      "options": {
        "taskName": ":apps:infrastructure:graphql-gateway:spotlessCheck"
      },
      "cache": true,
      "inputs": [
        "default",
        "{projectRoot}/build.gradle",
        "{projectRoot}/src/**/*.java"
      ]
    },
    "format": {
      "executor": "@nx/gradle:gradle",
      "options": {
        "taskName": ":apps:infrastructure:graphql-gateway:spotlessApply"
      },
      "cache": true,
      "inputs": [
        "default",
        "{projectRoot}/build.gradle",
        "{projectRoot}/src/**/*.java"
      ],
      "outputs": ["{projectRoot}/build/libs"]
    },
    "sonar": {
      "executor": "@nx/gradle:gradle",
      "options": {
        "taskName": ":apps:infrastructure:graphql-gateway:sonar"
      },
      "cache": true,
      "inputs": [
        "default",
        "{projectRoot}/src/**/*",
        "{projectRoot}/build.gradle"
      ]
    },
    "docker-build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -t $DOCKER_USER/ebanking-graphql-gateway:${TAG:-latest} -f apps/infrastructure/graphql-gateway/Dockerfile .",
        "cwd": "."
      },
      "dependsOn": ["build"],
      "cache": false
    },
    "docker-push": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker push $DOCKER_USER/ebanking-graphql-gateway:${TAG:-latest}",
        "cwd": "."
      },
      "dependsOn": ["docker-build"],
      "cache": false
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "helm upgrade --install graphql-gateway tools/helm/microservice -n $DEPLOY_NAMESPACE -f $VALUES_FILE --set image.tag=${TAG:-latest} --set image.repository=$DOCKER_USER/ebanking-graphql-gateway --wait"
        ],
        "cwd": "."
      },
      "configurations": {
        "production": {
          "env": {
            "DEPLOY_NAMESPACE": "ebanking",
            "VALUES_FILE": "tools/helm/microservice/values-prod-graphql-gateway.yaml"
          }
        },
        "staging": {
          "env": {
            "DEPLOY_NAMESPACE": "staging",
            "VALUES_FILE": "tools/helm/microservice/values-staging-graphql-gateway.yaml"
          }
        }
      },
      "cache": false
    }
  }
}
