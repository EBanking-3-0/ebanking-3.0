{
  "name": "graphql-gateway",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/infrastructure/graphql-gateway/src",
  "tags": [], "implicitDependencies": ["service-discovery"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "configurations": {
        "production": {
          "command": "../../../gradlew build -x test",
          "cwd": "apps/infrastructure/graphql-gateway"
        },
        "development": {
          "command": "../../../gradlew build -x test",
          "cwd": "apps/infrastructure/graphql-gateway"
        }
      },
      "defaultConfiguration": "development",
      "cache": true,
      "inputs": [
        "default",
        "{projectRoot}/**/*"
      ],
      "outputs": [
        "{projectRoot}/build/libs"
      ]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "../../../gradlew test",
        "cwd": "apps/infrastructure/graphql-gateway"
      },
      "cache": true,
      "inputs": [
        "default",
        "{projectRoot}/build.gradle",
        "{projectRoot}/src/**/*.java"
      ],
      "outputs": [
        "{projectRoot}/build/reports/tests",
        "{projectRoot}/build/test-results"
      ]
    },
    "serve": {
      "continuous": true,
      "executor": "nx:run-commands",
      "// dependsOn": ["service-discovery:serve"],
      "configurations": {
        "production": {
          "command": "../../../gradlew bootRun --args='--spring.profiles.active=prod'",
          "cwd": "apps/infrastructure/graphql-gateway"
        },
        "development": {
          "command": "../../../gradlew bootRun",
          "cwd": "apps/infrastructure/graphql-gateway"
        }
      },
      "defaultConfiguration": "development"
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "../../../gradlew clean",
        "cwd": "apps/infrastructure/graphql-gateway"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "../../../gradlew spotlessCheck",
        "cwd": "apps/infrastructure/graphql-gateway"
      },
      "cache": true,
      "inputs": [
        "default",
        "{projectRoot}/build.gradle",
        "{projectRoot}/src/**/*.java"
      ]
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "../../../gradlew spotlessApply",
        "cwd": "apps/infrastructure/graphql-gateway"
      },
      "cache": true,
      "inputs": [
        "default",
        "{projectRoot}/build.gradle",
        "{projectRoot}/src/**/*.java"
      ],
      "outputs": [
        "{projectRoot}/build/libs"
      ]
    },
    "docker:build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -t graphql-gateway:local -f apps/infrastructure/graphql-gateway/Dockerfile .",
        "cwd": "."
      },
      "dependsOn": [
        "build"
      ]
    }
  }
}
