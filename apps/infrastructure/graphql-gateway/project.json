{
  "name": "graphql-gateway",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/infrastructure/graphql-gateway/src",
  "tags": [],
  "implicitDependencies": [
    "service-discovery"
  ],
  "targets": {
    "build": {
      "executor": "@nx/gradle:gradle",
      "options": {
        "taskName": ":apps:infrastructure:graphql-gateway:build",
        "args": [
          "-x",
          "test"
        ]
      },
      "configurations": {
        "production": {},
        "development": {}
      },
      "defaultConfiguration": "development",
      "cache": true,
      "inputs": [
        "default",
        "{projectRoot}/**/*"
      ],
      "outputs": [
        "{projectRoot}/build/libs"
      ]
    },
    "test": {
      "executor": "@nx/gradle:gradle",
      "options": {
        "taskName": ":apps:infrastructure:graphql-gateway:test"
      },
      "cache": true,
      "inputs": [
        "default",
        "{projectRoot}/build.gradle",
        "{projectRoot}/src/**/*.java"
      ],
      "outputs": [
        "{projectRoot}/build/reports/tests",
        "{projectRoot}/build/test-results"
      ]
    },
    "serve": {
      "executor": "@nx/gradle:gradle",
      "continuous": true,
      "options": {
        "taskName": ":apps:infrastructure:graphql-gateway:bootRun"
      },
      "configurations": {
        "production": {
          "args": [
            "--args=--spring.profiles.active=prod"
          ]
        },
        "development": {}
      },
      "defaultConfiguration": "development",
      "dependsOn": [
        "build"
      ]
    },
    "clean": {
      "executor": "@nx/gradle:gradle",
      "options": {
        "taskName": ":apps:infrastructure:graphql-gateway:clean"
      }
    },
    "lint": {
      "executor": "@nx/gradle:gradle",
      "options": {
        "taskName": ":apps:infrastructure:graphql-gateway:spotlessCheck"
      },
      "cache": true,
      "inputs": [
        "default",
        "{projectRoot}/build.gradle",
        "{projectRoot}/src/**/*.java"
      ]
    },
    "format": {
      "executor": "@nx/gradle:gradle",
      "options": {
        "taskName": ":apps:infrastructure:graphql-gateway:spotlessApply"
      },
      "cache": true,
      "inputs": [
        "default",
        "{projectRoot}/build.gradle",
        "{projectRoot}/src/**/*.java"
      ],
      "outputs": [
        "{projectRoot}/build/libs"
      ]
    },
    "sonar": {
      "executor": "@nx/gradle:gradle",
      "options": {
        "taskName": ":apps:infrastructure:graphql-gateway:sonar"
      },
      "cache": true,
      "inputs": [
        "default",
        "{projectRoot}/src/**/*",
        "{projectRoot}/build.gradle"
      ]
    },
    "docker-build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -t $DOCKER_USER/ebanking-graphql-gateway:${TAG:-latest} -f apps/infrastructure/graphql-gateway/Dockerfile .",
        "cwd": "."
      },
      "dependsOn": [
        "build"
      ],
      "cache": false
    },
    "docker-push": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker push $DOCKER_USER/ebanking-graphql-gateway:${TAG:-latest}",
        "cwd": "."
      },
      "dependsOn": [
        "docker-build"
      ],
      "cache": false
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "helm upgrade --install graphql-gateway tools/helm/microservice -n $DEPLOY_NAMESPACE -f tools/helm/microservice/values-prod-graphql-gateway.yaml --set image.tag=${TAG:-latest} --set image.repository=$DOCKER_USER/ebanking-graphql-gateway --set ingress.hosts[0].host=$DEPLOY_DOMAIN --set ingress.tls[0].hosts[0]=$DEPLOY_DOMAIN --wait"
        ],
        "cwd": "."
      },
      "configurations": {
        "production": {
          "env": {
            "DEPLOY_NAMESPACE": "ebanking",
            "DEPLOY_DOMAIN": "bank-api.h4k5.net"
          }
        },
        "staging": {
          "env": {
            "DEPLOY_NAMESPACE": "staging",
            "DEPLOY_DOMAIN": "bank-api-staging.h4k5.net"
          },
          "options": {
            "commands": [
              "helm upgrade --install graphql-gateway tools/helm/microservice -n $DEPLOY_NAMESPACE -f tools/helm/microservice/values-prod-graphql-gateway.yaml --set image.tag=${TAG:-latest} --set image.repository=$DOCKER_USER/ebanking-graphql-gateway --set ingress.hosts[0].host=$DEPLOY_DOMAIN --set ingress.tls[0].hosts[0]=$DEPLOY_DOMAIN --set env.SPRING_KAFKA_BOOTSTRAP_SERVERS=ebanking-infra-kafka-broker.ebanking.svc.cluster.local:9092 --set env.SPRING_SECURITY_OAUTH2_RESOURCESERVER_JWT_JWK_SET_URI=http://ebanking-infra-keycloakx-http.ebanking.svc.cluster.local:80/realms/ebanking-realm/protocol/openid-connect/certs --wait"
            ]
          }
        }
      },
      "cache": false
    }
  }
}
